{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}